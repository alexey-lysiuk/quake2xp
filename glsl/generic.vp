in vec2		a_texCoord;
in vec2		a_2texCoord;
in vec4		a_colorArray;
in vec3		a_vertArray;

out vec2		v_texCoord;
out vec2		v_texCoord1;
out vec4		v_texCoordSky;
out vec4		v_colorArray;

uniform int			u_isSky;
uniform mat4		u_SkyMatrix;

void main (void) 
{
	v_texCoord		= a_texCoord;
	v_texCoord1		= a_2texCoord; 
	v_colorArray	= a_colorArray;

	gl_Position		= gl_ModelViewProjectionMatrix * vec4(a_vertArray, 1.0);

}

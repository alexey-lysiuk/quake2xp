out vec2			v_texCoord0;
out float			v_depth;
out	vec4			v_color;

in	vec2		a_texCoord;
in	vec3		a_vertArray;
in	vec4		a_colorArray;

void main (void) {
	v_texCoord0 = a_texCoord;
	v_color = a_colorArray;
	v_depth = -(gl_ModelViewMatrix * vec4(a_vertArray, 1.0)).z;
	gl_Position = gl_ModelViewProjectionMatrix * vec4(a_vertArray, 1.0);
}

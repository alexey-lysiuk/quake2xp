out vec2			v_texCoord0;
out float			v_depth;
out	vec4			v_color;
uniform mat4		u_mvp, u_mv;

layout(location = 0) in vec3 att_position;
layout(location = 4) in vec4 att_color4f;
layout(location = 5) in vec2 att_texCoordDiffuse;

void main (void) {
	v_texCoord0 = att_texCoordDiffuse;
	v_color = att_color4f;
	v_depth = -(u_mv * vec4(att_position, 1.0)).z;
	gl_Position = u_mvp * vec4(att_position, 1.0);
}
